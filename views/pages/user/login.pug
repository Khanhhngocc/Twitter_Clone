extends ../../layouts/login-layout.pug 

block content
    .loginContainer 
        h1 Login 
        form(action="", method="post") 

            p.errorMessage #{payload.errorMessage}

            input(type="text", name="logUserName", placeholder="User or Email" value=payload.logUserName, required)
            input(type="password", name="logPassword", placeholder="Enter your password", required)
            input(type="submit", value="Login")
        a(href="/user/register") Need an account? Register here. 